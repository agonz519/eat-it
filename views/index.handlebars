<h1>BURGERS! EAT IT!</h1>

<h2>BURGERS THAT I NEED TO PUT IN MY MOUTH</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{burger_name}}

        <button class="devourBurger" data-id="{{id}}" data-devoured="{{devoured}}">
          {{#if devoured}}Regurgitate!{{else}}EAT{{/if}}
        </button>
      </li>

    {{/unless}}
  {{/each}}
</ul>

<h2>BURGERS THAT I'VE ATE</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{burger_name}}

        <button class="devourBurger" data-id="{{id}}" data-devoured="{{devoured}}">
          {{#if devoured}}Regurgitate!{{else}}EAT{{/if}}
        </button>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="bName">Burger Name:</label>
    <input type="text" id="bName" name="name">
  </div>

  <button type="submit">Add Burger</button>

</form>